# Évite l'installation des dépendances optionnelles
optional=false

# Désactive les scripts postinstall inutiles en production
ignore-scripts=true

# Utilise npm ci pour des installations plus rapides et fiables
engine-strict=true

# Désactive la collecte de données d'utilisation
telemetry=false

# Optimise le cache npm
prefer-offline=true
prefer-online=false
# Utilise le cache pour les dépendances
cache-min=9999999999
